<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OgretmenSohbetListesi">

    <include
        android:id="@+id/include"
        layout="@layout/ustbar1" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/Ogrenci0"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/buton_egimli_10_sol_beyaz_kenar_anarenk"
                android:fontFamily="sans-serif"
                android:paddingLeft="10dp"
                android:text="ÖĞRENCİ NUMARASI\nÖĞRENCİ İSMİ SOYİSMİ"
                android:textAlignment="textStart"
                android:textColor="@color/anaRenk"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@+id/ogrenci0detay"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/ogrenci0detay"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/buton_egimli_10_sag_anarenk"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Ogrenci0"
                app:layout_constraintTop_toTopOf="@+id/Ogrenci0" />

            <TextView
                android:id="@+id/ogrenci0detaymetni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Okundu"
                android:textColor="@color/beyaz"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/ogrenci0detay"
                app:layout_constraintEnd_toEndOf="@+id/ogrenci0detay"
                app:layout_constraintStart_toEndOf="@+id/Ogrenci0"
                app:layout_constraintTop_toTopOf="@+id/ogrenci0detay" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/sohbet_ekleme"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/yuvarlak_anarenk"
        android:fontFamily="sans-serif-thin"
        android:text="+"
        android:textColor="@color/beyaz"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>