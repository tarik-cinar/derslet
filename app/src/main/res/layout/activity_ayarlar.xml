<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ayarlar">

    <include
        android:id="@+id/include"
        layout="@layout/ustbar1" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/kb_yatay_sol"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="15dp"
                android:background="@color/anaRenk"
                app:layout_constraintBottom_toBottomOf="@+id/kullanici_bilgileri_baslik"
                app:layout_constraintEnd_toStartOf="@+id/kullanici_bilgileri_baslik"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/kullanici_bilgileri_baslik" />

            <TextView
                android:id="@+id/kullanici_bilgileri_baslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-medium"
                android:text="Kullan覺c覺 Bilgileri"
                android:textColor="@color/anaRenk"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/kb_yatay_sag"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="25dp"
                android:background="@color/anaRenk"
                app:layout_constraintBottom_toBottomOf="@+id/kullanici_bilgileri_baslik"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/kullanici_bilgileri_baslik"
                app:layout_constraintTop_toTopOf="@+id/kullanici_bilgileri_baslik" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                app:cardBackgroundColor="@color/anaRenk"
                app:cardCornerRadius="10dp"
                app:contentPadding="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kullanici_bilgileri_baslik">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/profil"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:srcCompat="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/telefon"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="45dp"
                android:backgroundTint="@color/anaRenk"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Telefon numaras覺 giriniz."
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/anaRenk"
                android:textColorHint="@color/anaRenk_75"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />

            <EditText
                android:id="@+id/mail"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="45dp"
                android:backgroundTint="@color/anaRenk"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Mail adresi giriniz."
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/anaRenk"
                android:textColorHint="@color/anaRenk_75"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/telefon" />

            <Button
                android:id="@+id/kb_button"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/buton_anarenk"
                android:text="KAYDET"
                android:textColor="@color/beyaz"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mail" />

            <View
                android:id="@+id/renk_yatay_sol"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="15dp"
                android:background="@color/anaRenk"
                app:layout_constraintBottom_toBottomOf="@+id/renk_baslik"
                app:layout_constraintEnd_toStartOf="@+id/renk_baslik"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/renk_baslik" />

            <TextView
                android:id="@+id/renk_baslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Renk Ayarlar覺"
                android:textColor="@color/anaRenk"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kb_button" />

            <View
                android:id="@+id/renk_yatay_sag"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="25dp"
                android:background="@color/anaRenk"
                app:layout_constraintBottom_toBottomOf="@+id/renk_baslik"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/renk_baslik"
                app:layout_constraintTop_toTopOf="@+id/renk_baslik" />

            <Button
                android:id="@+id/renk_ayar_sol"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/buton_egimli_sol_beyaz_kenar_anarenk"
                android:text="RENK AYAR"
                android:textColor="@color/anaRenk"
                app:layout_constraintEnd_toStartOf="@+id/renk_ayar_orta"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/renk_baslik" />

            <Button
                android:id="@+id/renk_ayar_orta"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/buton_beyaz_kenar_anarenk"
                android:text="RENK AYAR"
                android:textColor="@color/anaRenk"
                app:layout_constraintEnd_toStartOf="@+id/renk_ayar_sag"
                app:layout_constraintStart_toEndOf="@+id/renk_ayar_sol"
                app:layout_constraintTop_toBottomOf="@+id/renk_baslik" />

            <Button
                android:id="@+id/renk_ayar_sag"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/buton_egimli_sag_beyaz_kenar_anarenk"
                android:text="RENK AYAR"
                android:textColor="@color/anaRenk"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/renk_ayar_orta"
                app:layout_constraintTop_toBottomOf="@+id/renk_baslik" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>